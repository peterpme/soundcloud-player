<% include ../partials/head %>
<div class="sc-player" ng-controller="playerController">
	<h1>Search A Category, Stream Your Music</h1>
	<audio preload></audio>
	<form name="searchForm" ng-submit="submitForm()" ng-cloak>
		<div clas="sc-player__search">
			<input type="text" class="input" placeholder="Search A Category" ng-model="category" ng-disabled="formSubmitted === true && formSuccess === false">
			<button type="submit" class="btn" ng-disabled="formSubmitted === true && formSuccess === false"><i class="fa fa-play-circle"></i></button>

			<p ng-show="formSubmitted === true && formSuccess === false">
				Loading: <i class="fa fa-spin fa-circle-o-notch fa-3x"></i>
			</p>

			<div class="sc-player__results" ng-show="formSuccess" ng-cloak>
				<h2>Your Playlist:</h2>
				<ul class="list-unstyled">
					<li ng-repeat="track in trackList"><a ng-href="{{track.uri}}">{{track.title}}</a></li>
				</ul>
			</div>
		</div>
	</form>
</div>
<% include ../partials/foot %>
